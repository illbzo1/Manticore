<body id="character">
<%= render 'menu' %>

<p id="notice"><%= notice %></p>
<span class="create_item">Create:</span>
<span class="create_item"><%= link_to 'Items Page', character_items_path(@character) unless @character.items.exists? %></span>
<span class="create_item"><%= link_to 'Skills Page', character_skills_path(@character) unless @character.skills.exists? %></span>
<span class="create_item"><%= link_to 'Special Abilities Page', character_specials_path(@character) unless @character.specials.exists? %></span>
<span class="create_item"><%= link_to 'Spells Page', character_spells_path(@character) unless @character.spells.exists? %></span>
<span class="create_item"><%= link_to 'Background Page', new_character_background_path(@character) unless @character.background %></span>

<div id="main">
<p>
<%= render 'details' %>
</p>

<p>
<%= render 'statistics' %>
</p>

<p>
<%= render 'hp' %>
</p>

<p>
<%= render 'ac' %>
</p>

<p>
<%= render 'initiative' %>
</p>

<p>
<%= render 'saves' %>
</p>

<br />

</div>
</body>