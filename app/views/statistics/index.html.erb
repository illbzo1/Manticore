<h1>Listing statistics</h1>

<table>
  <tr>
    <th>Strength</th>
    <th>Dexterity</th>
    <th>Constitution</th>
    <th>Intelligence</th>
    <th>Wisdom</th>
    <th>Charisma</th>
    <th>Character</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @statistics.each do |statistic| %>
  <tr>
    <td><%= statistic.references %></td>
    <td><%= statistic.strength %></td>
    <td><%= statistic.dexterity %></td>
    <td><%= statistic.constitution %></td>
    <td><%= statistic.intelligence %></td>
    <td><%= statistic.wisdom %></td>
    <td><%= statistic.charisma %></td>
    <td><%= link_to 'Show', statistic %></td>
    <td><%= link_to 'Edit', edit_statistic_path(statistic) %></td>
    <td><%= link_to 'Destroy', statistic, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

