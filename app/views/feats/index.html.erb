<h1>Listing feats</h1>

<table>
  <tr>
    <th>Feat desc</th>
    <th>Feat benefit</th>
    <th>Feat special</th>
    <th>Character</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @feats.each do |feat| %>
  <tr>
    <td><%= feat.feat_desc %></td>
    <td><%= feat.feat_benefit %></td>
    <td><%= feat.feat_special %></td>
    <td><%= feat.character %></td>
    <td><%= link_to 'Show', feat %></td>
    <td><%= link_to 'Edit', edit_feat_path(feat) %></td>
    <td><%= link_to 'Destroy', feat, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

