<h1>Listing initiatives</h1>

<table>
  <tr>
    <th>Total</th>
    <th>Dex</th>
    <th>Misc</th>
    <th>Speed</th>
    <th>Character</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @initiatives.each do |initiative| %>
  <tr>
    <td><%= initiative.total %></td>
    <td><%= initiative.dex %></td>
    <td><%= initiative.misc %></td>
    <td><%= initiative.speed %></td>
    <td><%= initiative.character %></td>
    <td><%= link_to 'Show', initiative %></td>
    <td><%= link_to 'Edit', edit_initiative_path(initiative) %></td>
    <td><%= link_to 'Destroy', initiative, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

